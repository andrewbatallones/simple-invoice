<div>
  <h1 class="font-bold text-4xl">Create new User</h1>
  <%= form_with model: @user, url: "/users" do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :email %>
      <%= f.email_field :email_address %>
    </div>

    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div>
      <%= f.submit "Submit" %>
    </div>
  <% end %>
</div>
